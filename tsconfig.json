{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "ESNext",               // Required for ESM-style imports/exports
    "moduleResolution": "bundler",   // Or use "node" if bundler causes issues
    "target": "ESNext",              // Modern syntax
    "esModuleInterop": true,         // Allows default imports from CommonJS modules
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
